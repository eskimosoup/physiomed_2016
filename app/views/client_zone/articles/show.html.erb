<% if @article.url_originally_posted_on.present? %>
  <%= content_for :head do %>
    <link rel="canonical" href="<%= @article.url_originally_posted_on %>" />
  <% end %>
<% end %>


<div class="hero-section standard-page-background">
  <div class="hero-section-header">
    <h1 class="hero-section-title full-width">
      <%= @article.title %>
    </h1>
  </div>

  <div class="hero-section-primary-content">
    <div class="page-content-wrap full-width">
      <div class="page-content">
        <%= image_tag @article.image.show, class: 'page-content-image', alt: @article.title if @article.image? %>

        <%= raw @article.content %>

        <div class="page-content-footer">
          <%= link_to "View All", client_zone_articles_path, class: "button brown-background" %>
        </div>
      </div>
    </div>

    <div class="page-contact-methods-wrap">
      <%= render(
        partial: 'shared/sidebar',
        locals: {
          call_to_action: true,
          testimonials: nil,
          team_members: [@article.author].compact,
          health_zone: wellbeing_zone_health_zone,
          case_studies: latest_case_studies,
          articles: nil,
        },
        cache: ['client_zone', [@article.author].compact, wellbeing_zone_health_zone, latest_case_studies]
      ) %>
    </div>
  </div>
</div>
