<% present category do |category_presenter| %>
  <div class="row collapse module-list-index <%= cycle('odd', 'even') %>" data-equalizer="module-list" id="item_<%= category_presenter.id %>">
    <div class="large-1 hide-for-medium-down columns" data-equalizer-watch="module-list">
      <span class="drag-helper"></span>
    </div>

    <div class="large-9 small-8 columns" data-equalizer-watch="module-list">
      <%= category_presenter.name %>
    </div>

    <div class="large-1 small-4 columns" data-equalizer-watch="module-list">
      <%= category_presenter.edit_link %>
    </div>

    <div class="large-1 hide-for-medium-down columns last" data-equalizer-watch="module-list">
      <%= category_presenter.delete_link %>
    </div>

    <% if category.frequently_asked_questions.size > 1 || category.videos.size > 1 || category.guides.size > 1 || category.testimonials.size > 1 %>
      <div class="small-12 module-list-additional-row columns">
        <div class="row collapse" id="index-list-<%= category_presenter.id %>">
          <div class="large-12 columns">
            <%= link_to 'Re-order FAQs', reorderings_path(model: 'Categories::FrequentlyAskedQuestion', colorbox: 1, parent_model_field: 'category_id', parent_model_id: category_presenter.id), class: 'iframe-colorbox' if category.frequently_asked_questions.size > 1 %>
            <%= link_to 'Re-order Videos', reorderings_path(model: 'Categories::Video', colorbox: 1, parent_model_field: 'category_id', parent_model_id: category_presenter.id), class: 'iframe-colorbox' if category.videos.size > 1 %>
            <%= link_to 'Re-order Guides', reorderings_path(model: 'Categories::Guide', colorbox: 1, parent_model_field: 'category_id', parent_model_id: category_presenter.id), class: 'iframe-colorbox' if category.guides.size > 1 %>
            <%= link_to 'Re-order Testimonials', reorderings_path(model: 'Categories::Testimonial', colorbox: 1, parent_model_field: 'category_id', parent_model_id: category_presenter.id), class: 'iframe-colorbox' if category.testimonials.size > 1 %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
