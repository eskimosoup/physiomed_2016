<%= form_for(@job_listing) do |f| %>
  <%= render partial: 'optimadmin/shared/form_errors', locals: { model: @job_listing } %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class="tabs prevent-flash">
    <ul class="tab-list">
      <li><a href="#tabs-1">Content</a></li>
      <li><a href="#tabs-2">Settings</a></li>
      <li>
        <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
          <%= octicon('chevron-down') %>
        <% end %>
      </li>
    </ul>

    <%= field_set_tag nil, id: 'tabs-1' do %>
      <div class="field">
        <%= f.label :summary %><br>
        <%= f.text_area :summary %>
      </div>

      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description, class: 'tinymce' %>
      </div>
    <% end %>

    <%= field_set_tag nil, id: 'tabs-2' do %>
      <div class="field">
        <%= f.label :display_from %><br>
        <%= f.text_field :display_from, class: 'datepicker' %>
      </div>

      <div class="field">
        <%= f.label :display_until %><br>
        <%= f.text_field :display_until, class: 'datepicker' %>
      </div>

      <div class="field">
        <%= f.label :display %><br>
        <%= f.check_box :display %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Save' %>
    <%= f.submit 'Save and continue editing' %>
  </div>
<% end %>
