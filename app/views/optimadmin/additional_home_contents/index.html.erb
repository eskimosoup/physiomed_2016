<%= render 'optimadmin/shared/header/main_title', title: 'Manage Additional Home Contents' %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: 'Additional Home Content', object: AdditionalHomeContent, path: new_additional_home_content_path %>
    <%= render 'optimadmin/shared/module/index/recycle_bin', items: @additional_home_contents.size, path: root_url %>
  </div>

  <div class="row collapse module-list-index header">
    <%= list_item 'large-8 small-8' do %>
      <%= link_to octicon('chevron-down'), '#', class: 'helper-link index-list-expand-all', data: { this_class: 'octicon-chevron-up octicon-chevron-down' } %>
      Title
    <% end %>
    <%= list_item { 'Display' } %>
    <%= list_item { 'View' } %>
    <%= list_item { 'Edit' } %>
    <%= list_item('large-1 hide-for-medium-down text-center last') { 'Delete' } %>
  </div>

  <div class="module-sortable" data-module="AdditionalHomeContent">
    <%= render partial: 'additional_home_content', collection: @additional_home_contents, as: :additional_home_content %>
  </div>
</div>
