<%= render 'optimadmin/shared/header/main_title', title: 'Manage What We Dos' %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: 'What We Do',
      object: WhatWeDo, path: new_what_we_do_path %>
    <%= render 'optimadmin/shared/module/index/recycle_bin',
      items: @what_we_dos.size, path: root_url %>
  </div>

  <div class="row collapse module-list-index header">
    <%= list_item 'large-6 small-8' do %>
      <%= link_to octicon('chevron-down'), '#', 
        class: 'helper-link index-list-expand-all',
        data: { this_class: 'octicon-chevron-up octicon-chevron-down' } %>
      Title
    <% end %>
    <%= list_item('large-2 hide-for-medium-down text-center') { 'Links' } %>
    <%= list_item { 'Display' } %>
    <%= list_item { 'View' } %>
    <%= list_item { 'Edit' } %>
    <%= list_item('large-1 hide-for-medium-down text-center last') { 'Delete' } %>
  </div>

  <div class="module-sortable" data-module="WhatWeDo">
    <%= render partial: 'what_we_do', collection: @what_we_dos %>
  </div>
</div>
