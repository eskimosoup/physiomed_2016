<%= form_for(@quick_link) do |f| %>
  <% if @quick_link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@quick_link.errors.count, "error") %> prohibited this employee quick link from being saved:</h2>

      <ul>
        <% @quick_link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="tabs prevent-flash">
    <ul class="tab-list">
      <li><a href="#tabs-1">Content</a></li>
      <li><a href="#tabs-2">Settings</a></li>
      <li>
        <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
          <%= octicon('chevron-down') %>
        <% end %>
      </li>
    </ul>

    <%= field_set_tag nil, id: 'tabs-1' do %>
      <div class="field">
        <%= f.label :link %><br>
        <%= f.text_field :link %>
      </div>

      <div class="field">
        <%= f.label :link_text %><br>
        <%= f.text_field :link_text %>
      </div>
    <% end %>

    <%= field_set_tag nil, id: 'tabs-2' do %>
      <div class="field">
        <%= f.label :display %><br>
        <%= f.check_box :display %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Save' %>
    <%= f.submit 'Save and continue editing' %>
  </div>
<% end %>
