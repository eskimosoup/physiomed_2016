<%= render 'optimadmin/shared/header/main_title', title: 'Manage Service Standards' %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: 'Service Standard', object: ServiceStandard, path: new_service_standard_path %>
    <%= render 'optimadmin/shared/module/index/recycle_bin', items: @service_standards.size, path: root_url %>
  </div>

  <div class="row collapse module-list-index header">
    <%= list_item 'large-1 hide-for-medium-down' do %>
      <%= link_to octicon('settings') %>
    <% end %>
    
    <%= list_item 'large-7 small-8' do %>
      <%= link_to octicon('chevron-down'), '#', class: 'helper-link index-list-expand-all', data: { this_class: 'octicon-chevron-up octicon-chevron-down' } %>
      Title
    <% end %>
    <%= list_item { 'Display' } %>
    <%= list_item { 'View' } %>
    <%= list_item { 'Edit' } %>
    <%= list_item('large-1 hide-for-medium-down text-center last') { 'Delete' } %>
  </div>

  <div class="module-sortable" data-module="ServiceStandard">
    <%= render partial: 'service_standard', collection: @service_standards, as: :service_standard %>
  </div>
</div>
