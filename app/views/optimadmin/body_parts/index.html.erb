<%= render 'optimadmin/shared/header/main_title', title: 'Manage Body Parts' %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: 'Body Part', object: BodyPart, path: new_body_part_path %>
    <%= render 'optimadmin/shared/module/index/recycle_bin', items: @body_parts.size, path: root_url %>
  </div>

  <div class="row collapse module-list-index header">
    <%= list_item 'large-8 small-8' do %>
      <%= link_to octicon('chevron-down'), '#', class: 'helper-link index-list-expand-all', data: { this_class: 'octicon-chevron-up octicon-chevron-down' } %>
      Title
    <% end %>
    <%= list_item { 'Display' } %>
    <%= list_item { 'View' } %>
    <%= list_item { 'Edit' } %>
    <%= list_item('large-1 hide-for-medium-down text-center last') { 'Delete' } %>
  </div>

  <div class="module-sortable" data-module="BodyPart">
    <%= render partial: 'body_part', collection: @body_parts, as: :body_part %>
  </div>
</div>
