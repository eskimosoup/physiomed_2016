<%= form_for(@body_part) do |f| %>
  <% if @body_part.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@body_part.errors.count, "error") %> prohibited this body part from being saved:</h2>

      <ul>
        <% @body_part.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="tabs prevent-flash">
    <ul class="tab-list">
      <li><a href="#tabs-1">Content</a></li>
      <li><a href="#tabs-2">Settings</a></li>
      <li>
        <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
          <%= octicon('chevron-down') %>
        <% end %>
      </li>
    </ul>

    <%= field_set_tag nil, id: 'tabs-1' do %>
      <div class="field">
        <%= f.label :name %><br>
        <%= f.select :name, BodyPart::BODY_PARTS %>
      </div>

      <div class="field">
        <%= f.label :introduction %><br>
        <%= f.text_area :introduction, class: 'tinymce' %>
      </div>
    <% end %>

    <%= field_set_tag nil, id: 'tabs-2' do %>
      <div class="field">
        <%= f.label :mobile_position %>
        <%= f.number_field :mobile_position %>
      </div>

      <div class="field">
        <%= f.label :display %><br>
        <%= f.check_box :display %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Save' %>
    <%= f.submit 'Save and continue editing' %>
  </div>
<% end %>
