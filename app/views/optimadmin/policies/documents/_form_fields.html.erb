<div class="field">
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</div>
<div class="tabs prevent-flash">
  <ul class="tab-list">
    <li><a href="#tabs-1">Content</a></li>
    <li><a href="#tabs-2">Media</a></li>
    <li><a href="#tabs-3">Settings</a></li>
    <li>
      <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
        <%= octicon('chevron-down') %>
      <% end %>
    </li>
  </ul>
  <%= field_set_tag nil, id: 'tabs-1' do %>
    <div class="field">
      <%= f.label :policies_category_id, 'Category' %><br>
      <%= f.select :policies_category_id, ::Policies::Category.pluck(:title, :id), prompt: 'Please select'  %>
    </div>
    <div class="field">
      <%= f.label :summary %><br>
      <%= f.text_area :summary , class: 'tinymce' %>
    </div>
  <% end %>
  <%= field_set_tag nil, id: 'tabs-2' do %>
    <%= f.document_field :file %>
  <% end %>
  <%= field_set_tag nil, id: 'tabs-3' do %>
    <div class="field">
      <%= f.label :display %><br>
      <%= f.check_box :display %>
    </div>
  <% end %>
</div>
