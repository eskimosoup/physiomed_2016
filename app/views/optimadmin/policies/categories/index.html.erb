<%= render 'optimadmin/shared/header/main_title', title: t('optimadmin.views.module.index.title', model_name: Policies::Category.model_name.human.pluralize.titleize) %>

<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: Policies::Category.model_name.human.titleize, object: Policies::Category, path: new_policies_category_path %>
    <%= render 'optimadmin/shared/search_form' %>
    <%= render 'optimadmin/shared/module/index/pagination' %>
    <!-- <%= render 'optimadmin/shared/module/index/order', options: [['A-Z', 'title ASC'], ['Z-A', 'title DESC'], ['Displayed', 'display DESC'], ['Hidden', 'display ASC']] %> -->
    <!-- <%= render 'optimadmin/shared/module/index/recycle_bin', items: @policies_categories.size, path: root_url %> -->
  </div>

  <div class="row collapse module-list-index header">
        <%= list_item 'large-1 hide-for-medium-down' do %>
      <%= link_to octicon('settings') %>
    <% end %>
        <%= list_item('') { 'Title' } %>
        <%= list_item('') { 'Count' } %>
        <%= list_item('large-1 small-4 text-center') { 'Display' } %>
    <%= list_item('large-1 small-4 text-center') { 'View' } %>
    <%= list_item('large-1 small-4 text-center') { 'Edit' } %>
    <%= list_item('large-1 text-center last') { 'Delete' } %>
  </div>

    <div class="module-sortable" data-module="Policies::Category">
    <%= render partial: 'policies_category', collection: @policies_categories, as: :policies_category, cached: true %>
  </div>

  <%= paginate @policies_categories %>
</div>
