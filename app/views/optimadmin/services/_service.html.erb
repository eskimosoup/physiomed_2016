<% present service do |service_presenter| %>
  <div class="row collapse module-list-index <%= cycle('odd', 'even') %>" id="item_<%= service_presenter.id %>">
    <div class="large-1 hide-for-medium-down columns">
      <span class="drag-helper"></span>
    </div>
    <div class="columns">
      <%= service_presenter.toggle_title %>
    </div>
    <div class="large-2 hide-for-medium-down text-center columns">
      <%= service_presenter.edit_image(:image) %>
    </div>
    <div class="large-1 small-4 text-center columns">
      <%= service_presenter.toggle_link %>
    </div>
    <div class="large-1 small-4 text-center columns">
      <%= service_presenter.copy_link %>
    </div>
    <div class="large-1 small-4 text-center columns">
      <%= service_presenter.view_link %>
    </div>
    <div class="large-1 small-4 text-center columns">
      <%= service_presenter.edit_link %>
    </div>
    <div class="large-1 text-center columns last">
      <%= service_presenter.delete_link %>
    </div>
  </div>
  <div class="row module-list-detail">
    <div class="small-12 columns module-list-summary last">
      <%= service_presenter.manage_sections %>
    </div>
  </div>
  <div class="row module-list-detail hide" id="index-list-<%= service_presenter.id %>">
    <div class="small-12 columns module-list-summary last">
      <%= service_presenter.optimadmin_summary %>
    </div>
  </div>
<% end %>
