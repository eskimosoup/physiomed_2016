<div class="field">
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</div>
<div class="tabs prevent-flash">
  <ul class="tab-list">
    <li><a href="#tabs-1">Content</a></li>
    <li><a href="#tabs-2">Media</a></li>
    <li><a href="#tabs-3">Settings</a></li>
    <li>
      <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
        <%= octicon('chevron-down') %>
      <% end %>
    </li>
  </ul>
  <%= field_set_tag nil, id: 'tabs-1' do %>
    <div class="field">
      <%= f.label :parent_id %><br>
      <%= f.select :parent_id, Services::Category.roots.pluck(:title, :id), include_blank: 'None'  %>
    </div>
    <div class="field">
      <%= f.label :colour %><br>
      <%= f.select :colour,  Services::Category::COLOURS, prompt: 'Please select'  %>
    </div>
    <div class="field">
      <%= f.label :summary %><br>
      <%= f.text_area :summary, class: 'tinymce' %>
    </div>
    <div class="field">
      <%= f.label :content %><br>
      <%= f.text_area :content , class: 'tinymce' %>
    </div>
    <div class="field">
      <%= f.label :style %><br>
      <%= f.select :style, Services::Category::STYLES %>
    </div>
  <% end %>
  <%= field_set_tag nil, id: 'tabs-2' do %>
  <% end %>
  <%= field_set_tag nil, id: 'tabs-3' do %>
    <div class="field">
      <%= f.label :display %><br>
      <%= f.check_box :display %>
    </div>
    <div class="field">
      <%= f.label :homepage_highlight %><br>
      <%= f.check_box :homepage_highlight %>
    </div>
  <% end %>
</div>
