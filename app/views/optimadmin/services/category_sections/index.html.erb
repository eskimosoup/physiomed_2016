<%= render 'optimadmin/shared/header/main_title', title: "Manage #{Services::CategorySection.model_name.human.pluralize.titleize} for #{content_tag :strong, @services_category.title}".html_safe %>
<div class="main-content">
  <div class="row module-header collapse">
    <%= render 'optimadmin/shared/module/index/new_item', title: Services::CategorySection.model_name.human.titleize, object: Services::CategorySection, path: { action: :new } %>
    <%= render 'optimadmin/shared/search_form' %>
    <%= render 'optimadmin/shared/module/index/pagination' %>
    <!-- <%= render 'optimadmin/shared/module/index/order', options: [['A-Z', 'title ASC'], ['Z-A', 'title DESC'], ['Displayed', 'display DESC'], ['Hidden', 'display ASC']] %> -->
    <!-- <%= render 'optimadmin/shared/module/index/recycle_bin', items: @services_category_sections.size, path: root_url %> -->
  </div>
  <div class="row collapse">
    <div class="columns">
      <%= render 'optimadmin/shared/module/form/back', path: service_categories_path, title: Services::Category.model_name.human.titleize %>
      <%= content_tag :p, @services_category.title %>
    </div>
  </div>
  <div class="row collapse module-list-index header">
    <%= list_item 'large-1 hide-for-medium-down' do %>
      <%= link_to octicon('settings') %>
    <% end %>
    <%= list_item('') { 'Title' } %>
    <%= list_item('large-2 hide-for-medium-down') { 'Image' } %>
    <%= list_item('large-1 small-4 text-center') { 'Display' } %>
    <%= list_item('large-1 small-4 text-center') { 'Edit' } %>
    <%= list_item('large-1 text-center last') { 'Delete' } %>
  </div>
  <div class="module-sortable" data-module="Services::CategorySection">
    <%= render partial: 'services_category_section', collection: @services_category_sections, as: :services_category_section, cached: true %>
  </div>
  <%= paginate @services_category_sections %>
</div>
