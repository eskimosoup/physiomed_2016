<%= form_for(@people_helped_section) do |f| %>
  <% if @people_helped_section.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@people_helped_section.errors.count, "error") %> prohibited this people helped section from being saved:</h2>

      <ul>
        <% @people_helped_section.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  
  <div class="tabs prevent-flash">
    <ul class="tab-list">
      <li><a href="#tabs-1">Content</a></li>
      <li><a href="#tabs-2">Settings</a></li>
      <li>
        <%= link_to '#', class: 'destroy-tabs right', data: { class: 'tabs' } do %>
          <%= octicon('chevron-down') %>
        <% end %>
      </li>
    </ul>

    <%= field_set_tag nil, id: 'tabs-1' do %>
      <div class="field">
        <%= f.label :section %><br>
        <%= f.select :section, PeopleHelpedSection::SECTIONS %>
      </div>

      <div class="field">
        <%= f.label :number %><br>
        <%= f.number_field :number %>
      </div>

      <div class="field">
        <%= f.label :content %><br>
        <%= f.text_area :content %>
      </div>

      <div class="field">
        <%= f.label :link %><br>
        <%= f.text_field :link %>
      </div>
    <% end %>

    <%= field_set_tag nil, id: 'tabs-2' do %>
      <div class="field">
        <%= f.label :display %><br>
        <%= f.check_box :display %>
      </div>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit 'Save' %>
    <%= f.submit 'Save and continue editing' %>
  </div>
<% end %>
