<!DOCTYPE html>
<html>
  <%= render "layouts/head" %>

  <body>
    <%= render "layouts/header" %>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
    <% end %>
    <%= yield %>

    <%= render "layouts/footer" %>

    <%= yield :footer %>
    <%= yield :javascript %>

    <%= render 'layouts/shared/remarketing_footer' if request.host.include?('physiomed.co.uk') %>
  </body>
</html>
