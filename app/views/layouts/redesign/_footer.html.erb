<% if content_for?(:social) %>
  <%= yield :social %>
<% else %>
  <div class="social-methods">
    <%= link_to 'Get in Touch',  new_contact_path, class: 'get-in-touch-action contact-action' %>
    <%= link_to 'Find a Physio', '#', class: 'find-a-physio-action contact-action toggle-class', data: { container: '.find-a-physio-wrap', class: 'visible', return: false } %>
  </div>
<% end %>

<div class="inline-modal find-a-physio-wrap">
  <div class="inline-modal-content find-a-physio">
    <%= button_tag class: 'inline-modal-close-button toggle-class', data: { class: 'visible', container: '.find-a-physio-wrap', return: false }, aria: { label: 'Close modal' }, type: 'button' do %>
      <span aria-hidden="true">&times;</span>
    <% end %>

    <h2 class="white">
      Find a Physiotherapist<br>
      <span class="green">Near you</span>
    </h2>
    <%= render(
      partial: "physio_searches/form",
      locals:
      {
        physio_search: @physio_search
      }
    ) %>
  </div>
</div>
