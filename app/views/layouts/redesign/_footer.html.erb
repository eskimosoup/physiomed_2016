  <div class="awards-container">
    <%= image_tag 'placeholders/awards-and-accreditations.jpg', alt: '' %>
  </div>

  <div class="footer-container small-print">
    <p>
      &copy; <%= Date.today.year %> Physio Med Limited
    </p>

    <ul class="footer-navigation">
      <%= nested_menu_items(menu_items: footer_menu.menu_items) %>
    </ul>

