<div class="hero-section standard-page-background">
  <div class="hero-section-header">
    <h1 class="hero-section-title">
      <%= @team_member.name %>
    </h1>
  </div>

  <div class="hero-section-primary-content">
    <div class="page-content-wrap full-width">
      <div class="page-content">
        <%= image_tag @team_member.image.show, class: 'page-content-image', title: @team_member.name if @team_member.image? %>
        <h2>
          <%= @team_member.role %>
        </h2>
        <%= raw @team_member.bio %>
      </div>
    </div>

    <div class="page-contact-methods-wrap">
      <%= render(
        partial: 'shared/sidebar',
        locals: {
          call_to_action: true,
          testimonials: nil,
          team_members: nil,
          health_zone: nil,
          case_studies: nil,
          articles: nil,
        }, cache: 'call_to_action'
      ) %>
    </div>
  </div>
</div>
