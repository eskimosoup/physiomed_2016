<% cache ['author', team_member] do %>
  <%= link_to '#', class: 'team-member toggle-class', data: { role: 'team-member', class: 'visible', container: ".team-member-profile-wrap-#{team_member.id}", return: false, team_member_modal: true } do %>
    <% if team_member.image? %>
      <div class="image">
        <%= image_tag team_member.image.author, title: team_member.name %>
      </div>
    <% end %>
    <div class="basic-details">
      <div class="name">
        <%= team_member.name %>
      </div>
      <div class="role">
        <%= team_member.role %>
      </div>
    </div>
  <% end %>
<% end %>

<%= render 'team_members/shared/modal', team_member: team_member %>
