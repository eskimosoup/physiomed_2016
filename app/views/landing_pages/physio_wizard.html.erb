<%= content_for :header do %>
  <%= raw @facade.landing_page.header_text %>
<% end %>

<% @facade.sections.displayed.each do |section| %>
  <% next if section.style.include?('__') %>

  <% if Rails.env.development? %>
    <!-- BEGIN <%= section.style %> -->
  <% end %>

  <div id="section-<%= section.id %>">
    <%= render partial: "landing_pages/physio_wizard/sections/#{section.style}", locals: {
          facade: @facade,
          section: section
        } %>
  </div>

  <% if Rails.env.development? %>
    <!-- END <%= section.style %> -->
  <% end %>
<% end %>

<% if @facade.landing_page.call_to_action_button? %>
  <%= content_for :call_to_action_button do %>
    <%= link_to @facade.landing_page.call_to_action_button_text,
                @facade.landing_page.call_to_action_button_link,
                class: 'get-in-touch-action-large',
                target: '_blank',
                rel: 'noopener' %>
  <% end %>
<% end %>
