<% if aftercare_video.present? %>
  <% cache "physiotherapy_treatment_#{aftercare_video}" do %>
    <section class="landing-page-content-wrap">
      <div class="landing-page-content-wrap__inner">
        <div class="landing-page-content-box">
          <div class="landing-page-content-box__inner">
            <div class="landing-page-aftercare">

              <div class="landing-page-aftercare__content">
                <div class="landing-page-aftercare__inner">
                  <h1 class="landing-page-aftercare__title">
                    <%= aftercare_video.title %>
                    <%= aftercare_video.sub_title %>
                  </h1>
                  <%= raw aftercare_video.content %>
                </div>
              </div>

              <div class="landing-page-aftercare__video">
                <iframe width="231" height="146" src="https://www.youtube-nocookie.com/embed/7bSFMJ3OGvs?rel=0&amp;controls=1&amp;showinfo=0" frameborder="0" allow="autoplay; encrypted-media" allowfullscreen></iframe>
              </div>
          </div>
        </div>
      </div>
    </section>
  <% end %>
<% end %>
