<%#= debug facade %>

<% present section do |presenter| %>
  <% if section.content? %>
    <div class="physiomed-online-assessment-landing-page">
      <div class="physiomed-online-assessment-landing-page__inner">
        <div class="physiomed-online-assessment-landing-page__content-box physiomed-online-assessment-landing-page__content-box--styles">
          <%= presenter.header(:h2, class: 'physiomed-online-assessment-landing-page__title') %>
          <% if presenter.sub_title? %>
            <h3><%= presenter.sub_title %></h3>
          <% end %>
          <%= presenter.content %>
          <%= presenter.button(class: 'generic-orange-button') %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>

<% if facade.sections.where(style: 'service_overview__column').present? %>
  <div class="physiomed-online-assessment-service-overview-item-wrap">
    <div class="physiomed-online-assessment-service-overview-item">
      <% facade.sections.where(style: 'service_overview__column').each_with_index do |column, index| %>
        <% present column do |presenter| %>
          <div class="physiomed-online-assessment-service-overview-item__inner <%= 'text-center' if index == 1 %>">
            <%= presenter.header(:h2, class: 'physiomed-online-assessment-landing-page__title') %>
            <% if presenter.sub_title? %>
              <h3><%= presenter.sub_title %></h3>
            <% end %>
            <%= presenter.content %>
            <%= presenter.image(nil) %>

            <% if column.button? %>
              <div class="physiomed-online-assessment-service-overview-item__button-wrap">
                <%= presenter.button(class: 'generic-orange-button') %>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
