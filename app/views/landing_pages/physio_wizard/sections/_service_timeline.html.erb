<%#= debug facade %>

<% present section do |presenter| %>
  <% if section.content? %>
    <div class="physiomed-online-assessment-service-timeline-content">
      <div class="physiomed-online-assessment-service-timeline-content__inner">
          <div class="physiomed-online-assessment-service-timeline-content__content-box">
        <h2 class="physiomed-online-assessment-service-timeline-content__title">
            <%= presenter.title %>
            <% if presenter.sub_title? %>
              <span class=physiomed-online-assessment-service-timeline-content__sub-title><%= presenter.sub_title %></span>
            <% end %>
          </h2>

          <div class="physiomed-online-assessment-service-timeline-content__content-box--styles">
            <%= presenter.content %>
            <%= presenter.button(class: 'generic-orange-button') %>
          </div>

          <% if facade.sections.where(style: 'service_timeline__column').present? %>
            <div class="physiomed-online-assessment-service-timeline-item-wrap">
              <div class="physiomed-online-assessment-service-timeline-item">
                <% facade.sections.where(style: 'service_timeline__column').each_with_index do |column, index| %>
                  <% present column do |presenter| %>
                    <div class="physiomed-online-assessment-service-timeline-item__inner">
                      <%= presenter.image(nil) %>
                      <%= presenter.header(:h2, class: 'physiomed-online-assessment-service-timeline-item__title') %>
                      <%= presenter.content %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
