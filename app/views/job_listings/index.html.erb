<div class="hero-section standard-page-background">
  <div class="hero-section-header">
    <h1 class="hero-section-title full-width">
      Jobs
    </h1>
  </div>

  <div class="hero-section-primary-content">
    <div class="page-content-wrap full-width">
      <div class="page-content">
        <p>
          If you are interested in working within our team of relationship managers at our head office please contact us. If you are a physiotherapist interested in joining our managed network, please visit the <%= link_to "Physiotherapist page", new_practice_application_path %> and fill in our simple application form.
        </p>

        <%= render(
          partial: "job_listings/job_listing",
          collection: @job_listings
        ) %>

        <%= paginate @job_listings %>
      </div>
    </div>

    <div class="page-contact-methods-wrap">
      <%= render(
        partial: 'shared/sidebar',
        locals: {
          call_to_action: true,
          testimonials: nil,
          team_members: nil,
          health_zone: wellbeing_zone_health_zone,
          case_studies: latest_case_studies,
          articles: nil,
        }
      ) %>
    </div>
  </div>
</div>
