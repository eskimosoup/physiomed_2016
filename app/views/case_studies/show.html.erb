<div class="hero-section body-part-background">
  <div class="hero-section-header">
    <h1 class="hero-section-title full-width">
      <%= @case_study.title %>
    </h1>
  </div>

  <div class="hero-section-primary-content">
    <div class="page-content-wrap full-width">
      <div class="page-content">
        <%= image_tag @case_study.image.show, class: 'page-content-image', alt: @case_study.title if @case_study.image? %>

        <%= raw @case_study.content %>

        <div class="page-content-footer">
          <%= link_to "View All", case_studies_path, class: "button brown-background" %>
        </div>
      </div>
    </div>

    <div class="page-contact-methods-wrap">
      <div class="page-contact-methods">
        <h4>
          Talk to our clinical team
        </h4>

        <ul class="page-contact-method-links">
          <%= render 'shared/contact_method_items' %>
        </ul>
      </div>

      <% if @case_study.testimonials.displayed.any? %>
        <div class="page-testimonials">
          <h4 class="green-border-bottom text-center">Testimonials</h4>
          <%= render @case_study.testimonials.displayed %>
        </div>
      <% end %>
    </div>
  </div>
</div>
