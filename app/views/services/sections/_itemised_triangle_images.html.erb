<div class="services-content">
  <div class="services-content__inner">

    <div class="services-itemised-triangle-images-content">
      <%= raw section.content %>
    </div>

    <div class="services-itemised-triangles">
      <%= render partial: 'services/section_items/section_item',
                collection: section.items.displayed.limit(3),
                as: :item,
                cache: true,
                locals: {
                  current_service: current_service,
                  parent_class: 'services-itemised-triangles'
                } %>
    </div>
  </div>
</div>
